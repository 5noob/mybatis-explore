<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.me.mybatis.dao.BlogDAO">
    <select id="selectBlogByXml" resultType="com.me.mybatis.domain.Blog">
        select *
        from blog
        where id = #{id}
    </select>
    
    <insert id="insertBlog" parameterType="com.me.mybatis.domain.Blog">
        insert into blog (id, name)
        values(#{id}, #{name, javaType=String, jdbcType=VARCHAR})
    </insert>


    <resultMap id="blogMap" type="com.me.mybatis.domain.Blog">
        <result property="id" column="id" javaType="String" jdbcType="VARCHAR"/>
        <result property="name" column="name" javaType="String" jdbcType="VARCHAR" />
    </resultMap>
</mapper>